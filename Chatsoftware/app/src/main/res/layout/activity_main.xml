<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ken.chatsoftware.MainActivity">

    <EditText
        android:id="@+id/editPhoneNumber"
        android:layout_width="248dp"
        android:layout_height="56dp"
        android:ems="15"
        android:hint="请输入手机号码"
        android:inputType="phone"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btNumber"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.05"
        tools:layout_editor_absoluteY="14dp"
        tools:layout_editor_absoluteX="2dp" />

    <EditText
        android:id="@+id/editNumber"
        android:layout_width="181dp"
        android:layout_height="54dp"
        android:ems="10"
        android:hint="请输入验证码"
        android:inputType="number"
        app:layout_constraintRight_toLeftOf="@+id/button3"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.238" />

    <Button
        android:id="@+id/btNumber"
        android:onClick="click1"
        android:layout_width="101dp"
        android:layout_height="57dp"
        android:text="验证码获取"
        app:layout_constraintBottom_toBottomOf="@+id/editPhoneNumber"
        android:layout_marginBottom="-1dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="29dp"
        tools:layout_editor_absoluteX="267dp" />

    <Button
        android:id="@+id/button3"
        android:onClick="click2"
        android:layout_width="165dp"
        android:layout_height="53dp"
        android:text="验证"
        app:layout_constraintBottom_toBottomOf="@+id/editNumber"
        android:layout_marginBottom="-1dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
